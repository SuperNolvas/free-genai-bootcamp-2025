# FastAPI Configuration
DEBUG=true
API_V1_PREFIX=/api/v1
PROJECT_NAME=Language Voyager
BACKEND_CORS_ORIGINS=["http://localhost:8000","http://localhost:3000"]

# Database Configuration
DATABASE_URL=postgresql://user:password@db:5432/language_voyager
TEST_DATABASE_URL=postgresql://user:password@db:5432/test_language_voyager

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# JWT Authentication
SECRET_KEY=your-secret-key-change-in-production # Not required for testing
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# ArcGIS Configuration
ARCGIS_API_KEY="" # Replace with your actual ArcGIS API key - Use "" around the key

# OpenRouter Configuration
OPENROUTER_API_KEY= # Replace with your actual OpenRouter API key - Do NOT use "" around the key
LLM_MODEL=google/gemma-3-27b-it:free # Replace with your actual LLM model - Do NOT use "" around the model

# Google Places API for Geo reversing

GOOGLE_PLACES_API_KEY= # Replace with your actual Google Places API key - Do NOT use "" around the key

# Storage Configuration
MAX_STORAGE_SIZE_MB=1024
SYNC_RETRY_ATTEMPTS=3
MIN_SYNC_INTERVAL_SECONDS=300

# Environment
ENVIRONMENT=development
DEBUG=true