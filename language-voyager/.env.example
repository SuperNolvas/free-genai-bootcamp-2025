# API Settings
API_V1_PREFIX=/api/v1
PROJECT_NAME="Language Voyager"
DEBUG=False  # Set to True for development

# Environment
ENVIRONMENT=production  # Options: development, staging, production

# Authentication
JWT_SECRET_KEY="your-secret-key-here"  # Change this in production!
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database
# For local development:
# DATABASE_URL="postgresql://user:password@localhost:5432/language_voyager"
# For Docker:
DATABASE_URL="postgresql://user:password@db:5432/language_voyager"

# Redis
# For local development:
# REDIS_URL="redis://localhost:6379"
# For Docker:
REDIS_URL="redis://redis:6379"

# CORS
# Comma-separated list of origins that can access the API
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# ArcGIS Integration (uncomment when ready)
# ARCGIS_API_KEY="your-api-key-here"